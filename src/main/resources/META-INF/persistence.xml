<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.1"
    xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                        https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd">

    <persistence-unit name="PostersPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.api.entities.Poster</class>

        <properties>
            <!--
                L'URL pointe vers le service "mariadb" défini dans docker-compose.yaml.
                Le nom de la base, l'utilisateur et le mot de passe correspondent
                aux variables d'environnement déclarées dans ce même fichier.
            -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mariadb://mariadb:3306/posters_db"/>
            <property name="jakarta.persistence.jdbc.user"      value="posters_user"/>
            <property name="jakarta.persistence.jdbc.password"  value="posters_password"/>
            <property name="jakarta.persistence.jdbc.driver"    value="org.mariadb.jdbc.Driver"/>

            <!-- Le schéma est géré par le script SQL init.sql monté dans MariaDB -->
            <property name="hibernate.hbm2ddl.auto"             value="none"/>
            <property name="hibernate.show_sql"                 value="true"/>
            <property name="hibernate.format_sql"               value="true"/>
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.MariaDBDialect"/>
        </properties>
    </persistence-unit>
</persistence>
